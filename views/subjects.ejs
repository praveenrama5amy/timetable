<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Subjects</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <style>
         *{
            box-sizing: border-box;
            margin: 0;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }
        html{
            height: -webkit-fill-available;
        }
        body{
            height: 100%;
            width: 100%;
            margin: 0;
        }
        .subject{
            border: solid black 2px;
            margin: 10px;
            padding: 10px;
            display: flex;
            /* align-items: center; */
            /* justify-content: center; */
            flex-direction: column;
        }
        .subject .dropdown-btn{
            align-items: center;
            display: flex;
            cursor: pointer;
        }
        .subject .dropdown-btn :first-child{
            flex: 1;
        }
        .form{
            padding: 20px;
            -webkit-user-select: none;
            -webkit-touch-callout: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }
        .form input[type="text"]{
            padding: 10px;
            width: 80%;
            margin: 5px;
        }
        .dropdown-content{
            display: none;
        }
        .newSubjectTutors{
            width: 75%;
        }
        input[type = "checkbox"]{
            cursor: pointer;
            width: 25px;
            height: 25px;
        }
        label{
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="form">
        <div class="dropdown-btn" onclick="dropdown(this)" style="display: flex;align-content: center;justify-content: center;">
            <button style="display: flex;justify-content: center;align-items: center;cursor: pointer;width: 100%;padding: 10px;">ADD
                <span class="material-symbols-outlined">add</span></button>
        </div>
        <div class="dropdown-content">
            <div style="display: flex;justify-content: center;align-items: center;flex-direction: column;">
                <input type="text" name="subjectName" id="subjectName" placeholder="Subject Name" title="Enter The Name Of the Subject">
                <input type="text" name="minimumHours" id="minimumHours" placeholder="Minimum Hours" title="Enter Minimum Hours should be alloted to every class">
                <input type="text" name="maximumHours" id="maximumHours" placeholder="Maximum Hours" title="Enter Maximum Hours can be alloted to a Class">
                <div class="newSubjectTutors">
                    <p>For Classes : </p>
                    <% classes.forEach(room => { %>
                        <div style="display: flex;align-items: center;padding: 3px;">
                            <input type="checkbox" name="subjectClasses" class="subjectClasses" value="<%= room.name %>" id="<%= room.name %>" style="cursor: pointer;width: 25px;height: 25px;">
                            <label for="<%= room.name %>" style="cursor: pointer;"><%= room.name %></label>
                        </div>
                    <% }) %>
                    <!-- <% tutors.forEach(tutor => { %>
                        <div style="display: flex;align-items: center;padding: 3px;">
                            <input type="checkbox" name="subjectTutors" class="subjectTutors" value="<%= tutor.name %>" id="<%= tutor.name %>" style="cursor: pointer;width: 25px;height: 25px;">
                            <label for="<%= tutor.name %>" style="cursor: pointer;"><%= tutor.name %></label>
                        </div>
                    <% }) %> -->
                </div>
                <button style="padding: 10px;cursor: pointer;" onclick="addSubject()">Add</button>
            </div>
        </div>
    </div>
    <% subjects.forEach(subject => { %>
        <div class="subject">
            <div class="dropdown-btn" onclick="dropdown(this)">
                <p><%= subject.name %></p>
                <span class="material-symbols-outlined">arrow_drop_down</span>
            </div>
            <div class="dropdown-content">
                <label for="">Minimum Hours per Class</label>
                <input type="text" value="<%= subject.minimumHours %>">
                <br>
                <label for="">Maximum Hours per Class</label>
                <input type="text" value="<%= subject.maximumHours %>">
                <h3>For Classes : </h3>
                <% classes.forEach(room => { %>
                    <div style="display: flex;align-items: center;">
                        <input type="checkbox" name="<%= subject.name %>@<%= room.name %>" id="<%= subject.name%>@<%= room.name %>" onchange="editClassSubject(this)" style="cursor:pointer;margin: 3px;"
                        <% if (subject.classes.includes(room.name)) { %>
                            checked
                            <% } %>
                        >
                        <label for="<%= subject.name%>@<%= room.name %>"> <%= room.name %></label>
                    </div>
                <% }) %>
                <!-- <% tutors.forEach(tutor => { %>
                    <br>
                    <label for="<%= subject.name%>@<%= tutor.name %>"><%= tutor.name %> : </label>
                    <input type="checkbox" name="<%= subject.name %>@<%= tutor.name %>" id="<%= subject.name%>@<%= tutor.name %>" onchange="editTutorSubjects(this)" style="cursor:pointer;"
                        <% if (tutor.subjects.includes(subject.name)) { %>
                            checked
                        <% } %>
                    >
                <% }) %> -->
            </div>
        </div>
    <% }) %>
    <script>
        function dropdown(e){
            let parent = e.parentElement;
            let dropdownContent = parent.getElementsByClassName("dropdown-content")[0];
            if(dropdownContent.style.display == "none" || dropdownContent.style.display == ""){
                dropdownContent.style.display = "block"
            }else{
                dropdownContent.style.display = "none"
            }
        }
        function ajax(url,method,data){
            return new Promise((resolve)=>{
                let xhttp = new XMLHttpRequest();
                xhttp.onload = function(){
                    resolve(this.responseText)
                }
                xhttp.open(method,url);
                xhttp.send(data);
            })
        }
        async function addSubject(){
            let name = document.getElementById("subjectName").value
            let minimumHours = document.getElementById("minimumHours").value
            let maximumHours = document.getElementById("maximumHours").value
            let tutorsElements = document.querySelectorAll(".subjectTutors")
            let tutors = []
            tutorsElements.forEach(tutor => {
                if(tutor.checked == true){
                    tutors.push(tutor.value)
                }
            })
            if(!(name != "" && minimumHours != "" && maximumHours != "" && name != null && minimumHours != null && maximumHours != null)){
                alert("Fill all the Field")
                return
            }
            let data = {name,minimumHours,maximumHours,tutors}
            console.log(data);
            let res = await ajax("addSubject","POST",JSON.stringify(data));
            res = JSON.parse(res)
            console.log(res);
            if(res.code == 200){
                location.reload();
            }else if(res.error != null){
                alert(res.error)
            }else{
                alert("Something Went Wrong");
            }
        }
        async function editTutorSubjects(element){
            let subjectName = (element.name.split("@"))[0];
            let tutorName = (element.name.split("@"))[1];
            let value = element.checked;
            let data = {
                subjectName,
                tutorName,
                value
            }
            let res = await ajax("editTutorSubject","POST",JSON.stringify(data));
            res = JSON.parse(res)
            if(res.error != null){
                alert(res.error)
                location.reload();
            }
        }
        async function editClassSubject(element){
            let subjectName = (element.name.split("@"))[0];
            let className = (element.name.split("@"))[1];
            let value = element.checked;
            let data = {
                subjectName,
                className,
                value
            }
            let res = await ajax("editClassSubject","POST",JSON.stringify(data));
            res = JSON.parse(res)
            if(res.error != null){
                alert(res.error)
                location.reload();
            }
        }
    </script>
</body>
</html>