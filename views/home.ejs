<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <style>
        *{
            margin: 0;
            box-sizing: border-box;
        }
        html{
            height : -webkit-fill-available
        }
        body{
            height: 100%;
        }
        .organisationsWrapper{
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: row;
            flex-wrap: wrap;
        }
        .organisation{
            width: 150px;
            aspect-ratio: 2/3;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
            border-radius: 5px;
            margin: 20px 200px;
            cursor: pointer;
            transition: all;
            transition-duration: 300ms;
        }
        .organisation:hover{
            opacity: 1;
            width: 152px;
        }
        .organisationName{
            text-transform: capitalize;
            font-weight: bold;
            font-family:system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }
    </style>
</head>
<body>
    <h1 style="text-align: center;text-transform: uppercase;letter-spacing: 10px;font-weight: bold;margin: 10px;">Organisations</h1>
    <div class="organisationsWrapper">
        <% organisations.forEach(e => { %>
            <div class="organisation" onclick="openOrganisation(this)" name="<%= e.name %>">
                <div class="organisationName">
                    <%= e.name %>
                </div>
            </div>
        <% }) %>
        <div class="organisation" onclick="addOrganisation()">
            <div class="organisationName">
                <span class="material-symbols-outlined">add</span>
            </div>
        </div>
    </div>
</body>
<script>
    async function ajax(url,method,body){
        let xhttp = new XMLHttpRequest()
        return new Promise((resolve) => {
            xhttp.open(method,url)
            xhttp.setRequestHeader("Content-Type","application/json")
            xhttp.send(JSON.stringify(body));
            xhttp.onload = function(){
                resolve(JSON.parse(this.responseText));
            }
        })
    }
    async function addOrganisation(){
        let name = await prompt("Enter Name of Organisation")
        if(name == null){
            return;
        }
        let res = await ajax("/addOrganisation","POST",{name})
        console.log(res);
        if(res.error && res.code == "1"){
            alert("Organisation Already Exists")
            return;
        }
        location.reload();
    }
    function openOrganisation(e){
        location.assign(`/organisation/${e.getAttribute("name")}`)
    }
</script>
</html>