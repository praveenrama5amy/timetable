<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Classes</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <style>
        *{
            box-sizing: border-box;
            margin: 0;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }
        html{
            height: -webkit-fill-available;
        }
        body{
            height: 100%;
            width: 100%;
            margin: 0;
        }
        .collections{
            margin: 10px 5px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
        }
        .collection{
            margin: 5px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            padding: 10px;
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
            width: 80%;
            opacity: 0.9;
            transition: all;
            transition-duration: 100ms;
        }
        .collection:hover{
            opacity: 1;
            padding: 15px;
            border-radius: 10px;
            margin: 10px;
        }
        form{
            width: 70%;
        }
        input,button{
            padding: 10px;
            width: 100%;
        }

    </style>
</head>
<body>
    <h1 style="text-align: center;text-transform: uppercase;letter-spacing: 10px;font-weight: bold;">
        Classes
    </h1>
    <div class="collections">
        <div class="collection addBtn" style="font-weight: bold;">
            <span class="material-symbols-outlined" style="font-weight: bold;font-size:30px;">add</span>
            ADD
        </div>
        <div class="collection addForm" style="font-weight: bold;">
            <form action="/organisation/<%= organisation.name %>/addClass" method="post" onsubmit="return false" id="classAddForm">
                <input type="text" placeholder="Class Name" name="name" id="className">
                <button onclick="addClass()">Add Class</button>
            </form>
        </div>
        <% classes.forEach(e => { %>
            <div class="collection" style="font-weight: bold;">
                <%= e.name %>
            </div>
        <% }) %>
    </div>
    <script>
        function addClass(){
            let className = document.getElementById("className").value;
            document.getElementById("className").value = "";
            let location = document.getElementById("classAddForm").getAttribute("action")
            let xhttp = new XMLHttpRequest();
            xhttp.open("POST",location);
            xhttp.setRequestHeader("Content-Type", "application/json")
            xhttp.send(JSON.stringify({name : className}))
            xhttp.onload = function(){
                let res = this.responseText;
                if(res=="OK"){
                    addClassToDom(className);
                }else{
                    alert("Class Already Exist")
                }
            }
        }
        function addClassToDom(className){
            let elements = document.querySelectorAll(".collection:not(.addBtn,.addForm)")
            let parent = document.querySelector(".collections");
            let e = document.createElement("div")
            e.className = "collection"
            e.style = "font-weight:bold;"
            e.innerHTML = className;
            parent.appendChild(e)
        }
        function setClassToDom(classNames){
            let elements = document.querySelectorAll(".collection:not(.addBtn,.addForm)")
            elements.forEach(e=>{
                e.remove();
            })
            let parent = document.querySelector(".collections");
            classNames.forEach(element=>{
                let e = document.createElement("div")
                e.className = "collection"
                e.style = "font-weight:bold;"
                e.innerHTML = element;
                parent.appendChild(e)
            })
        }
        function removeClassFromDom(className){
            let element = document.querySelectorAll(".collection:not(.addBtn,.addForm)")
            element = [...element].find(e=>{
                return e.innerText == className
            })
            if(element){
                element.remove()
            }
            else{
                return({
                    errCode:404,
                    error : "Class Not Found"
                })
            }
            // let parent = document.querySelector(".collections");
        }
    </script>
</body>
</html>