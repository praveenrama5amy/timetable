<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tutors</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <style>
         *{
            box-sizing: border-box;
            margin: 0;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }
        html{
            height: -webkit-fill-available;
        }
        body{
            height: 100%;
            width: 100%;
            margin: 0;
        }
        .tutor{
            border: solid black 2px;
            margin: 10px;
            padding: 10px;
            display: flex;
            /* align-items: center; */
            /* justify-content: center; */
            flex-direction: column;
        }
        .tutor .dropdown-btn{
            align-items: center;
            display: flex;
            cursor: pointer;
        }
        .tutor .dropdown-btn :first-child{
            flex: 1;
        }
        .dropdown{
            display: none;
        }
        .dropdown-content{
            display: block;
        }
    </style>
</head>
<body>
    <% tutors.forEach(tutor => { %>
        <div class="tutor">
            <div class="dropdown-btn" onclick="dropdown(this)">
                <p><%= tutor.name %></p>
                <span class="material-symbols-outlined">arrow_drop_down</span>
            </div>
            <div class="dropdown-content">
                <label for="">Minimum Hours per Class</label>
                <input type="text" value="<%= tutor.minimumHours %>">
                <br>
                <label for="">Maximum Hours per Class</label>
                <input type="text" value="<%= tutor.maximumHours %>">
                <% subjects.forEach(subject => { %>
                    <br>
                    <label for="<%= subject.name%>@<%= tutor.name %>"><%= subject.name %> : </label>
                    <input type="checkbox" name="<%= subject.name %>@<%= tutor.name %>" id="<%= subject.name%>@<%= tutor.name %>" style="cursor:pointer;"
                        <% if (tutor.subjects.includes(subject.name)) { %>
                            checked
                        <% } %>
                    >
                <% }) %>
            </div>
        </div>
    <% }) %>
    <script>
        function dropdown(e){
            let parent = e.parentElement;
            let dropdownContent = parent.getElementsByClassName("dropdown-content")[0]
            if(dropdownContent.style.display == "none" || dropdownContent.style.display == ""){
                dropdownContent.style.display = "block"
            }else{
                dropdownContent.style.display = "none"
            }
        }
    </script>
</body>
</html>