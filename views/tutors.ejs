<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tutors</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <style>
         *{
            box-sizing: border-box;
            margin: 0;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }
        html{
            height: -webkit-fill-available;
        }
        body{
            height: 100%;
            width: 100%;
            margin: 0;
        }
        .tutor{
            border: solid black 2px;
            margin: 10px;
            padding: 10px;
            display: flex;
            /* align-items: center; */
            /* justify-content: center; */
            flex-direction: column;
        }
        .tutor .dropdown-btn{
            align-items: center;
            display: flex;
            cursor: pointer;
        }
        .tutor .dropdown-btn :first-child{
            flex: 1;
        }
        .dropdown{
            display: none;
        }
        .dropdown-content{
            display: block;
        }
        .form{
            padding: 20px;
            -webkit-user-select: none;
            -webkit-touch-callout: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }
        .form input[type="text"]{
            padding: 10px;
            width: 80%;
            margin: 5px;
        }
        /* .dropdown-content{
            display: none;
        } */
        .newtutorSubjects{
            width: 75%;
        }
        input[type = "checkbox"]{
            cursor: pointer;
            width: 25px;
            height: 25px;
        }
    </style>
</head>
<body>
    <div class="form">
        <div class="dropdown-btn" onclick="dropdown(this)" style="display: flex;align-content: center;justify-content: center;">
            <button style="display: flex;justify-content: center;align-items: center;cursor: pointer;width: 100%;padding: 10px;">ADD
                <span class="material-symbols-outlined">add</span></button>
        </div>
        <div class="dropdown-content" style="display: none;">
            <div style="display: flex;justify-content: center;align-items: center;flex-direction: column;">
                <input type="text" name="tutorName" id="tutorName" placeholder="Tutor Name" title="Enter The Name Of the Tutor">
                <input type="text" name="minimumHours" id="minimumHours" placeholder="Minimum Hours" title="Enter Minimum Hours that Tutor must have alloted">
                <input type="text" name="maximumHours" id="maximumHours" placeholder="Maximum Hours" title="Enter Maximum Hours can be alloted to Tutor">
                <div class="newtutorSubjects">
                    <p>Subject taking by this Tutor:</p>
                    <% subjects.forEach(subject => { %>
                        <div style="display: flex;align-items: center;padding: 3px;">
                            <input type="checkbox" name="tutorSubjects" class="tutorSubjects" value="<%= subject.name %>" id="<%= subject.name %>">
                            <label for="<%= subject.name %>" style="cursor: pointer;"><%= subject.name %></label>
                        </div>
                    <% }) %>
                </div>
                <button style="padding: 10px;cursor: pointer;" onclick="addTutor()">Add</button>
            </div>
        </div>
    </div>
    <% tutors.forEach(tutor => { %>
        <div class="tutor">
            <div class="dropdown-btn" onclick="dropdown(this)">
                <p><%= tutor.name %></p>
                <span class="material-symbols-outlined">arrow_drop_down</span>
            </div>
            <div class="dropdown-content">
                <label for="">Minimum Hours per Class</label>
                <input type="text" value="<%= tutor.minimumHours %>">
                <br>
                <label for="">Maximum Hours per Class</label>
                <input type="text" value="<%= tutor.maximumHours %>">
                <% subjects.forEach(subject => { %>
                    <br>
                    <input type="checkbox" name="<%= subject.name %>@<%= tutor.name %>" id="<%= subject.name%>@<%= tutor.name %>" onchange="editTutorSubjects(this)" style="cursor:pointer;"
                        <% if (tutor.subjects.includes(subject.name)) { %>
                            checked
                        <% } %>
                    >
                    <label for="<%= subject.name%>@<%= tutor.name %>"> <%= subject.name %></label>
                <% }) %>
            </div>
        </div>
    <% }) %>
    <script>
        function dropdown(e){
            let parent = e.parentElement;
            let dropdownContent = parent.getElementsByClassName("dropdown-content")[0]
            if(dropdownContent.style.display == "none" || dropdownContent.style.display == ""){
                dropdownContent.style.display = "block"
            }else{
                dropdownContent.style.display = "none"
            }
        }
        function ajax(url,method,data){
            return new Promise((resolve)=>{
                let xhttp = new XMLHttpRequest();
                xhttp.onload = function(){
                    resolve(this.responseText)
                }
                xhttp.open(method,url);
                xhttp.send(data);
            })
        }
        async function addTutor(){
            let name = document.getElementById("tutorName").value
            let minimumHours = document.getElementById("minimumHours").value
            let maximumHours = document.getElementById("maximumHours").value
            let subjectElements = document.querySelectorAll(".tutorSubjects")
            let subjects = [];
            subjectElements.forEach(subject => {
                if(subject.checked == true){
                    subjects.push(subject.value)
                }
            })
            if(!(name != "" && minimumHours != "" && maximumHours != "" && name != null && minimumHours != null && maximumHours != null)){
                alert("Fill all the Field")
                return
            }
            let data = {name,minimumHours,maximumHours,subjects}
            console.log(data);
            let res = await ajax("addTutor","POST",JSON.stringify(data));
            res = JSON.parse(res)
            console.log(res);
            if(res.code == 200){
                location.reload();
            }else if(res.error != null){
                alert(res.error)
            }else{
                alert("Something Went Wrong");
            }
        }
        async function editTutorSubjects(element){
            let subjectName = (element.name.split("@"))[0];
            let tutorName = (element.name.split("@"))[1];
            let value = element.checked;
            let data = {
                subjectName,
                tutorName,
                value
            }
            let res = await ajax("editTutorSubject","POST",JSON.stringify(data));
            res = JSON.parse(res)
            if(res.error != null){
                alert(res.error)
                location.reload();
            }
        }
    </script>
</body>
</html>