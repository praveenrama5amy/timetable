<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confirmation</title>
    <style>
        *{
            box-sizing: border-box;
            margin: 0;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }
        html{
            height: -webkit-fill-available;
        }
        body{
            height: 90%;
            width: 100%;
            margin: 0;
        }
        .error{
            background-color: #fff;
            border: solid rgb(226, 78, 78) 2px;
            margin: 5px;
            border-radius: 10px;
            padding: 15px;
            font-size: 20px;
            color: red;
        }
        .nxtBtn{
            padding: 10px;
            background-color:  rgb(37, 255, 37);
            border: none;
            color: #fff;
            font-weight: bold;
            letter-spacing: 2px;
            font-size: 20px;
            margin-top: -8px;
            display: block;
            margin-left: auto;
            margin-right: 0x;
            opacity: 0.8;
            border-radius: 0px 0 0 15px;
        }
        button:hover{
            cursor: pointer;
            opacity: 1;
        }
        .disabled{
            background-color: grey;
            color: #fff;
            opacity: 0.3 !important;
            cursor: not-allowed !important;
        }
        .noErrorDiv{
            display: flex;
            align-items: center;
            justify-content: center;
            color: green;
            height: 100%;
            display: none;
        }
        .noErrorDiv span{
            font-size: 100px;
            font-weight: 900;
        }
    </style>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>
<body>
    <button class="nxtBtn" title="Clear all Conflicts to go Next">NEXT</button>
    <div class="errors">
        <% for (const hour in summary.hours) { %>
            <% if (summary.hours[hour].stat == false) { %>
                <div class="error">
                    <p class="errorOf"><%= hour %> :</p>
                    <% if (summary.hours[hour].reason == "underflow") { %>
                        <p>Please allot <%= summary.hours[hour].count %> more classes for <%= hour %>. <%= hour %> is lacking of <%= summary.hours[hour].count %> periods in a week.</p>
                    <% } %>
                    <% if (summary.hours[hour].reason == "overflow") { %>
                        <p><%= hour %> contains <%= summary.hours[hour].count %> extra classes. Please remove <%= summary.hours[hour].count %> periods for a week</p>
                    <% } %>
                </div>
            <% } %>
        <% } %>
        <% for (const tutor in summary.tutors) { %>
            <% if (summary.tutors[tutor].stat == false) { %>
                <div class="error">
                    <p class="errorOf"><%= tutor %> :</p>
                    <% if (summary.tutors[tutor].reason == "underflow") { %>
                        <p>Please allot <%= summary.tutors[tutor].count %> more classes for <%= tutor %>. <%= tutor %> is lacking of <%= summary.tutors[tutor].count %> periods or decrease minimum hours for <%= tutor %>.</p>
                    <% } %>
                    <% if (summary.tutors[tutor].reason == "overflow") { %>
                        <p><%= tutor %> contains <%= summary.tutors[tutor].count %> extra classes. Please remove <%= summary.tutors[tutor].count %> periods or increase Maximum hours for <%= tutor %></p>
                    <% } %>
                </div>
            <% } %>
        <% } %>
    </div>
    <div class="noErrorDiv">
        <span class="material-symbols-outlined">done</span>
        <p>No Conflicts Click Next</p>
    </div>
    <script>
        enableOrDisableNxtBtn();

        function enableOrDisableNxtBtn(){
            let errorDiv = document.querySelectorAll(".error");
            if(errorDiv.length != 0){
                document.querySelector(".nxtBtn").disabled = true;
                document.querySelector(".nxtBtn").setAttribute("class","nxtBtn disabled")
            }else{
                document.querySelector(".nxtBtn").disabled = false;
                document.querySelector(".nxtBtn").setAttribute("class","nxtBtn")
                document.querySelector(".noErrorDiv").style.display = "flex"
            }
        }
    </script>
</body>
</html>